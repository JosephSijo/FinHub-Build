{
  "appId": "com.finhub.app",
  "appName": "FinHub",
  "webDir": "build",
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 10000,
      "backgroundColor": "#020617",
      "showSpinner": false,
      "androidScaleType": "CENTER_CROP",
      "splashFullScreen": true,
      "splashImmersive": true
    },
    "StatusBar": {
      "backgroundColor": "#020617",
      "style": "DARK"
    },
    "Keyboard": {
      "resize": "body",
      "style": "DARK",
      "resizeOnFullScreen": true
    }
  }
}